<%- include('partials/header') %>

<div class="container">
  <div class="jumbotron centered">
    <i class="fas fa-key fa-6x"></i>
    <h1 class="display-3">OpenSpace</h1>
    <p class="secret-text">Don't keep your blogs to yourself, share them anonymously!</p>

    <form action="/submit" method="POST">

      <div class="form-group">
        <label>Title</label>
        <input class="form-control text-center" type="text" name="postTitle">
        <label>Post</label>
        <textarea class="form-control text-center" name="postBody" rows="5" cols="30"></textarea>
      </div>
      <button type="submit" class="btn btn-dark">Submit</button>
    </form>


  </div>
</div>
